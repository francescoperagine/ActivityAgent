<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context=".ClassListActivity">

    <!--
    This layout is a two-pane layout for the Exams
    master/detail flow.
    
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/class_list"
        android:name="it.teamgdm.sms.dibapp.ClassListFragment"
        android:layout_width="@dimen/item_width"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="it.teamgdm.sms.dibapp.ClassListActivity"
        tools:listitem="@layout/class_list_content" />
    <FrameLayout
        android:id="@+id/class_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/class_list_empty"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/class_list_empty_text"/>


</LinearLayout>