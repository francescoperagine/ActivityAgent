<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="it.teamgdm.sms.dibapp"
    tools:ignore="GoogleAppIndexingWarning">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" tools:ignore="ManifestOrder" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>

    <application
        android:hardwareAccelerated="false"
        android:icon="@mipmap/dib_logo_foreground"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:roundIcon="@mipmap/dib_logo_round"
        android:supportsRtl="true"
        android:allowBackup="true"
        android:fullBackupContent="true"
        tools:targetApi="n">

        <activity
            android:name=".ExamListActivity"
            android:label="@string/title_exam_list" />
        <activity
            android:name=".ExamDetailActivity"
            android:label="@string/title_exam_detail"
            android:parentActivityName=".ExamListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="it.teamgdm.sms.dibapp.ExamListActivity" />
        </activity>
        <activity
            android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProfileActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity"/>
        <activity android:name=".MainActivity" />
        <receiver android:name=".GeofenceBroadcastReceiver"/>
    </application>

</manifest>